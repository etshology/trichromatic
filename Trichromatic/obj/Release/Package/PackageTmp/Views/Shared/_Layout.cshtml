<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>TRICHROMATIC - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="navbar" class="sticky">
        <div id="top-bar" class="container">
            <div id="logo">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo.png" /></a>
            </div>
            <div id="social">
                <div class="inline"><a href="https://www.facebook.com/pages/Trichromatic-West-Inc/280555495315964?fref=ts" target="_blank"><img src="~/Content/images/fb.png"></a></div>
                <div class="inline"><a href="#" target="_blank"><img src="~/Content/images/tw.png"></a></div>
                <div class="inline"><a href="#" target="_blank"><img src="~/Content/images/gp.png"></a></div>
                <div class="inline"><a href="#" target="_blank"><img src="~/Content/images/yt.png"></a></div>
            </div>
        </div>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <a href="@Url.Action("Index", "Home")"><img id="logo-small" src="/Content/images/logo-sm.png" /></a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li><a href="@Url.Action("About", "Home", new { name = "About" })">About</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Divisions <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Index", "Division", new { name = "Textile" })">Textile</a></li>
                                <li><a href="@Url.Action("Index", "Division", new { name = "Surfactants" })">Surfactants</a></li>
                                <li><a href="@Url.Action("Index", "Division", new { name = "Adhesives" })">Adhesives</a></li>
                                <li><a href="@Url.Action("Index", "Division", new { name = "Sustainability" })">Sustainability</a></li>
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Contact", "Home", new { name = "Contact" })">Contact</a></li>
                    </ul>
                    <input id="searchbar" type="text" class="form-control" placeholder="Search">
                </div>
            </div>
        </div>
        <hr id="nav-hr" />
    </div>
    <div class="margin-120">
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <p>Copyright &copy; 2015 @{ if (DateTime.Now.Year > 2015)
                {<span>-  @DateTime.Now.Year</span>}} TRICHROMATIC - WEST, INC.</p>
        </div>
    </footer>
    <div id="footer-social">
            <div style="display:inline-block"><a href="https://www.facebook.com/pages/Trichromatic-West-Inc/280555495315964?fref=ts" target="_blank"><img src="~/Content/images/fb.png"></a></div>
            <div style="display:inline-block"><a href="#" target="_blank"><img src="~/Content/images/tw.png"></a></div>
            <div style="display:inline-block"><a href="#" target="_blank"><img src="~/Content/images/gp.png"></a></div>
            <div style="display:inline-block"><a href="#" target="_blank"><img src="~/Content/images/yt.png"></a></div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript">
            function initialize() {
                var mapOptions = {
                    center: new google.maps.LatLng(33.986924, -118.155863),
                    zoom: 13,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                var map = new google.maps.Map(document.getElementById("map_canvas"),
                  mapOptions);
                // create a marker
                var latlng = new google.maps.LatLng(33.986924, -118.155863);
                var marker = new google.maps.Marker({
                    position: latlng,
                    map: map
                });
            }
            google.maps.event.addDomListener(window, "load", initialize);
        </script>
</body>
</html>
